""" TABBING
set expandtab
set tabstop=2
set shiftwidth=2

let g:auto_save = 1
let g:auto_save_silent = 1

nnoremap <C-E> :e.<CR>
nnoremap <C-N> :bnext<CR>
nnoremap <C-P> :bprev<CR>
nnoremap <C-W> :bw<CR>
nnoremap <C-X> :bdelete<CR>

