[alias]
	lg = log --stat --summary
	ll = log --pretty=oneline
	c = !git add -A && git commit -S -a
	cm = !git add -A && git commit -S -am
	ca = commit --amend
	pu = push
	pl = pull
	fe = fetch
	ch = checkout
	st = !git add -A && git status -sbuall
	br = branch
	brdel = !sh -c 'git branch -D $1 && git push origin --delete $1' -
	sh = stash
	re = !git add -A && git reset --hard HEAD
	ret = reset --soft HEAD^
	rea = remote add
	rer = remote rm
	cl = clone
[color]
	ui = auto
