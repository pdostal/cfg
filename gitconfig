[user]
	name = pdostal
	email = git@pdostal.cz
[alias]
	lg = log --stat --summary
	ll = !git log --pretty=oneline
	cm = !git add -A && git commit --no-status -am
	ca = commit --amend
	pu = push
	pl = pull
	fe = fetch
	puf = push --force
	puh = push heroku master
	st = !git add -A && git status -sbuall
	br = branch
	brdel = !sh -c 'git branch -D $1 && git push origin --delete $1' -
	sh = stash
	re = reset --hard HEAD
	ret = reset --soft HEAD^
	rea = remote add
	rer = remote rm
	cl = clone
[color]
  ui = auto
[push]
	default = simple
