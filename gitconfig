[alias]
  lg = log --graph --summary --stat --format='%Cblue%h %Cred%G? %Cblue%D%n%Cgreen%cN <%cE> %GK%n%cd, %cr:%n%n%B'
  ll = log --format='%Cblue%h %Cgreen%cr %<(22)%Creset%cN %s'
  c = commit -a
  cm = commit -am
  ca = commit --amend
  pu = push
  pl = pull
  fe = fetch
  ch = checkout
  st = status -sbuall
  br = branch
  brdel = !sh -c 'git branch -D $1 && git push origin --delete $1' -
  sh = stash
  re = reset --hard HEAD
  ret = reset --soft HEAD^
  rea = remote add
  rer = remote rm
  cl = clone
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[core]
  excludesfile = ~/dotfiles/gitignore
  excludesfile = ~/external/github_gitignore/Global/OSX.gitignore
[push]
  default = matching
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
